//- including navigation links with view variable

doctype html

html
  head
    block page_title
      title This is the page title
    meta(charset="UTF-8")
    link(rel="stylesheet" href="/stylesheets/application.css")

  body
    nav
      ul
        li
          a(href="/english" class=currentLinkIsEnglish)
            img.flag(src="/images/flag-of-United-States-of-America.png"
                     alt="US Flag"
                     title="Go to US English site")
        li
          a(href="/french" class=currentLinkIsFrench)
            img.flag(src="/images/flag-of-France.png"
                     alt="Drapeau de la france"
                     title="Aller sur le site français")
        li
          a(href="/serbian" class=currentLinkIsSerbian)
            img.flag(src="/images/flag-of-Serbia.png"
                     alt="Застава Србије"
                     title="Идите на српски сајт")

    header
      block greeting
        h1 Hello World!

    main
      block software_engineer